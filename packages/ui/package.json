{
  "name": "ferns-ui",
  "version": "1.2.4",
  "main": "dist/index.js",
  "license": "Apache-2.0",
  "scripts": {
    "local": "tsc-watch --onSuccess \"cp -a dist/* ../flourish/node_modules/ferns-ui/dist\"",
    "lint": "eslint",
    "lintfix": "eslint --fix",
    "build": "tsc",
    "dev": "tsc -w",
    "deps": "node checkDeps.js",
    "test": "TZ=America/New_York jest --watchAll",
    "test:ci": "TZ=America/New_York jest --ci",
    "postinstall": "cd ../.. && patch-package",
    "types": "npx typedoc"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "jest": {
    "globalSetup": "./jest-setup.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "printWidth": 100,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "plugin:ferns/recommended",
      "plugin:react-native-a11y/all"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "tsconfigRootDir": "./"
    },
    "plugins": [
      "ban"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "react-native-a11y/has-valid-accessibility-descriptors": "off",
      "ban/ban": [
        "error",
        {
          "name": [
            "dayjs",
            "*"
          ],
          "message": "Use Luxon."
        },
        {
          "name": [
            "moment",
            "*"
          ],
          "message": "Use Luxon"
        }
      ]
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "devDependencies": {
    "@expo/config-plugins": "~8.0.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/luxon": "^3.4.2",
    "@types/mdurl": "^2.0.0",
    "@types/react": "~18.2.45",
    "@types/react-datetime-picker": "^5.0.0",
    "@types/react-signature-canvas": "^1.0.5",
    "@types/react-time-picker": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "babel-jest": "^29.7.0",
    "babel-preset-react-app": "^10.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-ban": "^2.0.0",
    "eslint-plugin-comment-length": "^2.1.1",
    "eslint-plugin-ferns": "^0.3.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-lodash": "^8.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-react-native-a11y": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "jest": "^29.7.0",
    "jest-expo": "~52.0.5",
    "jest-github-actions-reporter": "^1.0.3",
    "mdurl": "^2.0.0",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-keyed-flatten-children": "^5.0.0",
    "react-router": "^6.23.0",
    "react-router-dom": "^7.2.0",
    "tsc-watch": "^6.0.4",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-router": "^6.23.0",
    "react-router-dom": "^7.2.0"
  },
  "dependencies": {
    "@expo-google-fonts/nunito": "^0.2.3",
    "@expo-google-fonts/titillium-web": "^0.2.3",
    "@expo/vector-icons": "^14.0.1",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/blur": "^4.4.0",
    "@react-native-community/datetimepicker": "8.0.1",
    "@react-native-picker/picker": "2.7.5",
    "expo-clipboard": "~6.0.3",
    "expo-font": "~12.0.5",
    "expo-haptics": "~13.0.1",
    "expo-image-manipulator": "~12.0.5",
    "expo-image-picker": "~15.0.5",
    "expo-linear-gradient": "~13.0.2",
    "expo-localization": "~15.0.3",
    "libphonenumber-js": "^1.10.61",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "patch-package": "^8.0.0",
    "react-app-polyfill": "^3.0.0",
    "react-date-picker": "^11.0.0",
    "react-datetime-picker": "^6.0.1",
    "react-dev-utils": "^12.0.1",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-actions-sheet": "^0.9.3",
    "react-native-calendars": "^1.1305.0",
    "react-native-drawer-layout": "^3.3.2",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-google-places-autocomplete": "^2.5.6",
    "react-native-markdown-display": "^7.0.2",
    "react-native-modalize": "^2.1.1",
    "react-native-permissions": "^4.1.5",
    "react-native-picker-select": "^9.1.3",
    "react-native-portalize": "^1.0.7",
    "react-native-reanimated": "~3.10.1",
    "react-native-signature-canvas": "^4.7.2",
    "react-native-svg": "15.2.0",
    "react-native-swiper-flatlist": "^3.2.3",
    "react-native-toast-notifications": "^3.4.0",
    "react-native-webview": "13.8.6",
    "react-signature-canvas": "^1.0.6",
    "react-time-picker": "^7.0.0"
  }
}
